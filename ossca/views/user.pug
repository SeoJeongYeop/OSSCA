extends layout

block vars
  - var menu='user'

block content
  .container 
    table#scoreTable.table.table-striped.table-hover
      thead.table-light
        tr 
          th rank
          th name 
          th github id 
          th year 
          th total score
          th commits
          th commit lines
          th issues
          th pull requests
          th repositories
      tbody
        -for(let i=0; i<size;i++)
          tr
            td.rank #{table[i].rank}
            td
              a(href="user/"+table[i].id) #{table[i].github_id}
            td #{table[i].name}
            td.ns= table[i].year
            td.sc= table[i].total_score
            td.sc= table[i].commit_cnt
            td.sc= table[i].commit_line
            td.sc= table[i].issue_cnt
            td.sc= table[i].pr_cnt
            td.sc= table[i].repo_cnt

